                       Cursor="Hand"/>
          </Expander.Header>

          <StackPanel Spacing="10">

            <StackPanel Orientation="Horizontal" Spacing="5">
              <TextBlock VerticalAlignment="Center" Text="X:"/>
              <NumericUpDown
                             
                             Increment="1"
                             Minimum="0"
                             Maximum="100"
                             Width="100"
                             FormatString="F02"
                             Value="{Binding Operation.ObservedXSize}"/>
              <TextBlock VerticalAlignment="Center" Text="mm"/>

